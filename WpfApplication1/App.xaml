<Application x:Class="WpfSnake.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfSnake"
             StartupUri="PageSwitcher.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="CustomButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Main Screen Drop Shadow Effect -->
            <DropShadowEffect Color="DarkSlateGray"
                        x:Key="mainDropShadow"
                        ShadowDepth="8" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
    
