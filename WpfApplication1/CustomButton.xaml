<UserControl x:Class="WpfSnake.CustomButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="100"
             d:DesignWidth="100">
    <Border Name="CustomButtonBorderStyle"
          Style="{DynamicResource CustomButtonBorderStyle}"
          MouseDown="CustomButtonBorderStyle_MouseDown"
          MouseUp="CustomButtonBorderStyle_MouseUp"
          MouseEnter="CustomButtonBorderStyle_MouseEnter"
          MouseLeave="CustomButtonBorderStyle_MouseLeave"
          MouseLeftButtonUp="CustomButtonBorderStyle_MouseLeftButtonUp">
        <TextBlock Text="{Binding Path=Text}"
               Name="tbText"
               Style="{DynamicResource CustomButtonTextBlockStyle}" />
    </Border>
    
</UserControl>
