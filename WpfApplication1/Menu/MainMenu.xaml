<UserControl x:Class="WpfSnake.Menu.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:WpfSnake.Menu"
        xmlns:my="clr-namespace:WpfSnake"
        mc:Ignorable="d"
        MinWidth="550" MinHeight="350"
        Loaded="UserControl_Loaded"   >
    <Grid Background="Gray">
        <Grid Margin="0,0">

            <Image Source="E:\OneDrive\Documents\Visual Studio 2015\Projects\ConsoleApplication2\WpfApplication1\bin\Debug\logo.png" Margin="0,0,0,0"/>


            <my:CustomButton HorizontalAlignment="Left"
                         Text="Start"
                         x:Name="btn1"
                         Click="btn1_Click" Width="68" Height="55" VerticalAlignment="Bottom">
                <my:CustomButton.Resources>
                    <ResourceDictionary Source="../FlatRedButtonStyles.xaml" />
                </my:CustomButton.Resources>
            </my:CustomButton>

            <my:CustomButton HorizontalAlignment="Left"
                         Margin="73,0,0,0"
                         Text="MUSIC ON "
