                         Click="btn2_Click" Width="105" Height="55" VerticalAlignment="Bottom">
                <my:CustomButton.Resources>
                    <ResourceDictionary Source="../FlatRedButtonStyles.xaml" />
                </my:CustomButton.Resources>
            </my:CustomButton>

            <my:CustomButton
                         Margin="183,0,0,0"
                         Text="SCOREBOARD"
                         x:Name="btn3"
                         Click="btn3_Click" Height="55" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="123">
                <my:CustomButton.Resources>
                    <ResourceDictionary Source="../FlatRedButtonStyles.xaml" />
                </my:CustomButton.Resources>
            </my:CustomButton>
            <my:CustomButton
                         Text="EXIT"
                         x:Name="btn4"
                         Click="btn4_Click" HorizontalAlignment="Right" Width="62" Height="55" VerticalAlignment="Bottom">
                <my:CustomButton.Resources>
                    <ResourceDictionary Source="../FlatBlueButtonStyles.xaml" />
                </my:CustomButton.Resources>
            </my:CustomButton>
        </Grid>
    </Grid>
</UserControl>
